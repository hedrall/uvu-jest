{
  "compilerOptions": {
    "plugins": [{"transform": "uvu-jest-ts-plugin"}],
    "outDir": "dist-uvu",
    "strict": true,
    "allowJs": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "module": "CommonJS",
    "checkJs": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules"
  ]
}
